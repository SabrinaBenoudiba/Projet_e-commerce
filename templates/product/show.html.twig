{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

<div class="container">
    <h1>Product</h1>
        <img src="{{ asset('uploads/images/' ~ product.image) }}" alt="Photo de profil" style="max-width:180px; border-radius:50%;">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ product.description }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ product.price }}</td>
                </tr>
                <tr>
                    <th>Image du produit</th>
                    <td>{{ product.image }}</td>
                </tr>

            </tbody>
        </table>

        <a class="btn btn-outline-primary" href="{{ path('app_product_index') }}">back to list</a>
        <a class="btn btn-outline-primary" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
        

        <a class="btn btn-outline-primary" href="{{ path('app_product_stock_add_history', {'id': product.id}) }}">Afficher l'historique de stock</a>

        <span class= "btn btn-outline-danger">{{ include('product/_delete_form.html.twig') }}</span>
        {# {% include 'product/_delete_form.html.twig' %} #}


</div>
    
{% endblock %}
