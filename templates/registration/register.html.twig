{% extends 'base.html.twig' %}

{% block title %}Fiche d'inscriprition{% endblock %}

{% block body %}
    <div class="container containerForm registerForm ">
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            <h1>Fiche d'inscription</h1>
            {{ form_widget(registrationForm.firstName, {'attr':{'class':'m-1 form form-control', 'placeholder': "Nom de famille"}}) }} 
            {{ form_widget(registrationForm.lastName, {'attr':{'class':'m-1 form form-control', 'placeholder': "Prénom"}}) }}
            {{ form_widget(registrationForm.email, {'attr':{'class':'m-1 form form-control', 'placeholder': "Mail"}}) }}
            {{ form_widget(registrationForm.plainPassword, {
                label: 'Password', 'attr':{'class':'m-1 form form-control', 'placeholder': "Mot de passe"}
            }) }}
            {{ form_row(registrationForm.agreeTerms, {
                label: 'Veuillez accepter les conditions générales', 'attr':{'class':'m-2'}
            }) }}

            <button type="submit" class="btn btn-block btn-l btn-primary m-1">Inscription</button>
        {{ form_end(registrationForm) }}
    </div>
    
{% endblock %}
