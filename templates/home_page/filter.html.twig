{% extends 'base.html.twig' %}

{% block title %}Sous-Catégorie{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h2 class="title text-center p-2">{{ subCategory.name }}</h2>
            {% for product in products %}
            <div class="card text-bg-dark col-2 m-4 p-0">
                <img src="{{asset('uploads/images/'~product.image)}}" class="card-img-top" > 
            <div class="card-body border-light mb-3 " >
                <a class ="titleProductLink" href="{{ path('app_home_product_show', {'id': product.id}) }}"><h5 class="card-title">{{product.name}}</h5></a>
                <p class="card-text">{{product.price}}€</p>
                <p class="card-text">{{product.description}}</p>
                <a href="#" class="btn btn-outline-primary">Ajouter au panier</a>
                {# <a href="#" class="btn btn-outline-primary">Ajouter à mes favoris</a> #}
            </div>
            </div>
            {% endfor %}   
        </div>
    </div>

{% endblock %}